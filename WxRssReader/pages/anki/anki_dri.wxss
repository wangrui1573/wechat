.page {
  background-color: #f9f9f9;
  padding: 20rpx;
}

.lesson-list {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
  padding-bottom: 10rpx;
}

.lesson-list text {
  font-size: 16rpx;
  color: #333;
}

.lesson-list button {
  background-color: #007bff;
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  font-size: 14rpx;
  border-radius: 4rpx;
}

