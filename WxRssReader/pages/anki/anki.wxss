/* 页面整体样式 */
.page {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  height: 100vh;
  padding: 10px;
  box-sizing: border-box;
  background-color: #f7f7f7;
}

/* 上半部分单词展示和含义 */
.upper {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80%;
  width: 100%;
  cursor: pointer;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  padding: 20px;
  box-sizing: border-box;
  background-color: white;
}





.word {
  font-size: 8vh; /* vh 表示视口高度的百分比 */
  white-space: normal; /* 自动换行 */
  /* word-wrap: break-word; 换行时断开单词 */
}

.meaning {
  margin-top: 5vh;
  font-size: 5vh;
  color: gray;
  white-space: normal; /* 自动换行 */
}

/* 下半部分按钮排列 */
.lower {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 15%;
  width: 100%;
}

.button {
  background-color: #007bff;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.button-blue {
  background-color: #007bff; /* 蓝色 */
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.button-red {
  background-color: #ff0000; /* 红色 */
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.button-yellow {
  background-color: #ffff00; /* 黄色 */
  color: black; /* 注意：为了更好的可读性，黄色按钮的文字颜色改为黑色 */
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.button-green {
  background-color: #1f6b1f; /* 绿色 */
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.lower-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-bottom: 10px;
}

.lower-buttons {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 10%;
  width: 100%;
  margin-bottom: 1px; /* 可根据需要调整下边距 */
  
}
.reset-button,
.word-count {
  flex: 1;
  text-align: center;
  margin: 0;
}

