.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50px;
}

.input-container {
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.input-label {
  width: 80px;
  font-size: 16px;
}

.input-box {
  flex: 1;
  padding: 6px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

.calculate-button {
  background-color: #007aff;
  color: white;
  padding: 10px 20px;
  border-radius: 4px;
  cursor: pointer;
}

.result {
  margin-top: 20px;
  font-size: 16px;
  color: #333;
}
