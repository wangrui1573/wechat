/* pages/tools/tools.wxss */
.container {
  padding: 20rpx;
}

.title {
  font-size: 18px;
  font-weight: bold;
  margin-top: 20rpx;
}

.grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  margin-top: 10rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  background-color: transparent; /* 去掉灰色背景 */
  border-radius: 8rpx;
  cursor: pointer;
}

.grid-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: transparent; /* 去掉图标背景 */
}

.grid-text {
  font-size: 12px;
  margin-top: 5rpx;
}

.spacer {
  height: 20rpx; /* 调整空白的高度 */
}
