  <view class="title">常用工具</view>
  <view class="grid">
    <block wx:for="{{ tools }}" wx:key="name">
      <navigator url="{{ item.url }}" class="grid-item">
        <image src="{{ item.icon }}" class="grid-icon"></image>
        <text class="grid-text">{{ item.name }}</text>
      </navigator>
    </block>
  </view>

